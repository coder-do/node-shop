<%- include('../includes/head.ejs') %> 
    <%- include('../includes/nav.ejs') %>
    <main>
        <div style="margin-top: 80px;"></div>
        <% if (prod.length <= 0) { %>
            <h1 style="text-align: center; margin-top: 80px;">Nothing there!</h1>
        <% } else { %>
            <ul class="orders">
                <% prod.forEach(order => { %>
                    <li class="orders__item">
                        <div style="display: flex;">
                            <h1 style="margin-right: 20px;"># <%= order._id %></h1>
                            <a style="text-decoration: none;
                                font-size: 18px;
                                line-height: 17px;" 
                            href="/invoice/<%= order._id %>" target="_blank">download invoice</a>
                        </div>
                        <ul class="orders__products">
                            <% order.products.forEach(prods => { %>
                                <li  class="orders__products-item"><%= prods.product.title %> (x<%= prods.quantity %>)  <b><%= prods.quantity * prods.product.price %>$</b></li>
                            <% }); %>
                        </ul>
                    </li>
                <% }); %>
            </ul>
        <% } %>
    </main>
<%- include('../includes/end.ejs') %> 