<%- include('../includes/head.ejs') %> 
<%- include('../includes/nav.ejs') %>
    <main class="cart">
        <% if (products.length > 0) { %>
            <ul>
                <% products.forEach(p => { %>
                    <li>
                        <div style="display: flex;">
                            <p><%= p.productData.title %> (<%= p.qtty %>)</p>
                            <form action="/delete-cart-item" method="POST">
                                <input type="hidden" value="<%= p.productData.id %>" name="id">
                                <button class="btn" type="submit" style="margin: 9px 0 0 6px;">Delete</button>
                            </form>
                        </div>
                    </li>
                <% }) %>
            </ul>
        <% } else { %>
            <h1>No Products in Cart!</h1>
        <% } %>
    </main>
<%- include('../includes/end.ejs') %> 