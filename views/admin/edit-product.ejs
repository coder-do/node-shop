<%- include('../includes/head.ejs') %>
    <%- include('../includes/nav.ejs') %>
        <main>
            <form style=" margin-top: 80px;" class="product-form" action="/admin/<% if (editing) { %>edit-product<% } else { %>product<% } %>"
                method="POST">
                <div class="form-control">
                    <label for="title">Title</label>
                    <input required type="text" name="title" id="title"
                        value="<% if (editing) { %><%= product.title %><% } %>">
                </div>
                <div class="form-control">
                    <label for="imag">Image URL</label>
                    <input required type="text" name="image" id="image"
                        value="<% if (editing) { %><%= product.image %><% } %>">
                </div>
                <div class="form-control">
                    <label for="price">Price</label>
                    <input required type="number" name="price" id="price" step="0.01"
                        value="<% if (editing) { %><%= product.price %><% } %>">
                </div>
                <div class="form-control">
                    <label for="description">Description</label>
                    <textarea name="description" id="description" rows="5" required><% if (editing) { %><%= product.description %><% } %></textarea>
                </div>
                <% if (editing) { %>
                    <input type="hidden" value="<%= product._id %>" name="id" />
                    <% } %>
                        <button class="btn" type="submit">
                            <% if (editing) { %>Update Product<% } else { %>Add Product<% } %>
                        </button>
            </form>
        </main>
<%- include('../includes/end.ejs') %>