<%- include('../includes/head.ejs') %>
    <%- include('../includes/nav.ejs') %>
        <main>
            <h1 style="text-align: center; margin-top: 80px;">
                <%= title %>
            </h1>
            <div class="grid">
                <% if(prod.length> 0) { %>
                    <% for(let p of prod) { %>
                        <article class="card product-item">
                            <header class="card__header">
                                <h1 class="product__title">
                                    <%= p.title %>
                                </h1>
                            </header>
                            <div class="card__image">
                                <img src='<%= p.image %> ' alt="Image">
                            </div>
                            <div class="card__content">
                                <h2 class="product__price">$<%= p.price %>
                                </h2>
                                <p class="product__description">
                                    <%= p.description %>
                                </p>
                            </div>
                            <div class="card__actions">
                                <a href="/admin/edit-product/<%= p._id %>?edit=true" class="btn">Edit</a>
                                <input type="hidden" value="<%= p._id %>" name="id" />
                                <input type="hidden" name="_csrf" value="<%= token %>">
                                <button class="btn" type="button" style="width: 100px;" onclick="deleteProd(this)">Delete</button>
                            </div>
                        </article>
                        <% } %>
                            <% } else { %>
                                <h2 style="text-align: center;">No Product!</h2>
                                <% } %>
            </div>
            <%- include('../includes/pagination.ejs', {
                currentPage: currentPage,
                prevPage: prevPage,
                nextPage: nextPage,
                hasPrevPage: hasPrevPage,
                hasNextPage: hasNextPage,
                lastPage: lastPage
            })  %>
        </main>    
    </body>
    <script src="/js/admin.js"></script>
</html>