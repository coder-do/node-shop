<%- include('../includes/head.ejs') %> 
    <%- include('../includes/nav.ejs') %>
    <main>
        <div class="grid">
            <% if(prod.length > 0) { %> 
                <% for(let p of prod) { %> 
                    <article class="card product-item">
                        <header class="card__header">
                            <h1 class="product__title"><%= p.title %> </h1>
                        </header>
                        <div class="card__image">
                            <img src='<%= p.image %> ' alt="Image">
                        </div>
                        <div class="card__content">
                            <h2 class="product__price">$<%= p.price %></h2>
                            <p class="product__description"><%= p.description %></p>
                        </div>
                        <div class="card__actions">
                            <a href="/admin/edit-product/<%= p.id %>?edit=true" class="btn">Edit</a>
                            <form action="/admin/delete-product" method="POST">
                                <button class="btn" type="submit" style="width: 100px;">Delete</button>
                            </form>
                        </div>
                    </article>
                <% } %> 
            <% } else { %>
                <h2 style="text-align: center;">No Product!</h2>
            <% } %>  
        </div>
    </main>
<%- include('../includes/end.ejs') %> 